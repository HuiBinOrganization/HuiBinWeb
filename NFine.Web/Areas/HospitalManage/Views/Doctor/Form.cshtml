            server: '/ProductManage/Product/UpLoadProcess',

            // 选择文件的按钮。可选。
            // 内部根据当前运行是创建，可能是input元素，也可能是flash.
            pick: '#' + uploadbtn,

            // 只允许选择图片文件。
            accept: {
                title: 'Images',
                extensions: 'gif,jpg,jpeg,bmp,png',
                mimeTypes: 'image/*'
            }
        });

        // 当有文件添加进来的时候
        uploader.on('fileQueued', function (file) {

            //图片索引
            var index = $("#" + fileList + " img").length;


            var $li = $(
                '<div id="' + file.id + '" class="file-item thumbnail">' +
                '<img>' +
